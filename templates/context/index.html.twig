{% extends 'base.html.twig' %}

{% block title %}Context index{% endblock %}

{% block body %}
    <h1>Context index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for context in contexts %}
            <tr>
                <td>{{ context.id }}</td>
                <td>{{ context.title }}</td>
                <td>{{ context.description }}</td>
                <td>{{ context.createdAt ? context.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('context_show', {'id': context.id}) }}">show</a>
                    <a href="{{ path('context_edit', {'id': context.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('context_new') }}">Create new</a>
{% endblock %}
