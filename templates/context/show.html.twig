{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/context/show.css') }}">
{% endblock %}

{% block title %}Context{% endblock %}

{% block body %}
    <main>
        <div class="separator">
            <h1>{{ context.title }}</h1>
        </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ context.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ context.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ context.description }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ context.createdAt ? context.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('context_index') }}">back to list</a>

    <a href="{{ path('context_edit', {'id': context.id}) }}">edit</a>

    {{ include('context/_delete_form.html.twig') }}
    </main>
{% endblock %}
