{% extends 'base.html.twig' %}

{% block title %}Context{% endblock %}

{% block body %}
    <h1>Context</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ context.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ context.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ context.description }}</td>
            </tr>
