{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/base.css') }}">
{% endblock %}

{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} alert-margin-left" id="alerts-container">
            <div class="alert-message">
                {% if label == 'error' %}
                    <i class="fas fa-exclamation-circle"></i>
                {% else %}
                    <i class="far fa-check-circle"></i>
                {% endif %}
                <p>{{ message }}</p>
            </div>
            <i class="fas fa-times" onclick="$('#alerts-container').hide(1000);"></i>
        </div>
    {% endfor %}
{% endfor %}

{% block javascripts %}
    <script type="text/javascript" charset="utf8" src="{{ asset('javascript/jquery-3.4.1.min.js') }}"></script>
{% endblock %}
