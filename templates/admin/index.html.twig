{% extends 'base.html.twig' %}

{% block stylesheets %}<link rel="stylesheet" href="{{ asset('css/admin/index.css') }}">{% endblock %}
{% block title %}DOMMA - Administration{% endblock %}

{% block body %}
    <main>
        <div class="admin-container">
            <div class="separator">
                <h1>Informations des utilisateurs</h1>
            </div>
            <a href="{{ path('admin_new') }}" id="button-new-user">Créer un compte</a>
        </div>

        <table class="table">
            <tbody>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Identifiant</th>
                <th>Email</th>
                <th>Rôle</th>
                <th>État</th>
                <th></th>
            </tr>
    {% if users %}
       {% for user in users %}
             <tr>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                {% if user.roles == ['ROLE_ADMIN'] %}
                    <td>Admin</td>
                {% else %}
                    <td>Utilisateur</td>
                {% endif %}

                {% if user.attempts >= 3 %}
                    <td id="user-blocked">Bloqué</td>
                {% else %}
                    <td>Actif</td>
                {% endif %}
                 <td class="admin-actions">{{ include('users/_delete_form.html.twig') }} {{ include('users/_delete_form.html.twig') }}</td>
             </tr>
       {% endfor %}
            </tbody>
        </table>
    {% else %}
            </tbody>
        </table>
            <p id="empty-users">Vous n'avez pas encore créé d'utilisateur.</p>
    {% endif %}
    </main>
{% endblock %}
