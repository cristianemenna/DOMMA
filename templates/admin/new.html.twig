{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/admin/new_user.css') }}">
    <link rel="stylesheet" href="{{ asset('select/css/select2.css') }}">
{% endblock %}


{% block title %}DOMMA - Créer un nouvel utilisateur{% endblock %}

{% block body %}
    <main>
        <div class="separator">
            <h1>Création d'utilisateur</h1>
        </div>

        <!-- Affichage des flashs --->
        {{ include('_alerts.html.twig') }}

        <!-- Formulaire de création d'utilisateur -->
        <div class="form">
            {{ form_start(form) }}
            {{ form_widget(form.first_name,  {'attr': {'class': 'form-input', 'placeholder': 'Prénom'}} ) }}
                {{ form_widget(form.last_name,  {'attr': {'class': 'form-input', 'placeholder': 'Nom'}} ) }}
                {{ form_widget(form.email,  {'attr': {'class': 'form-input', 'placeholder': 'Email'}} ) }}
                <div class="form-errors-container">
                    {{ form_errors(form.email) }}
                </div>
                {{ form_widget(form.username,  {'attr': {'class': 'form-input', 'placeholder': 'Identifiant'}} ) }}
                {{ form_errors(form.username) }}
            <div class="select-style">
                    {{ form_widget(form.role) }}
                </div>
                <div class="form-buttons">
                    <button class="create-user">{{ button_label|default('Créer utilisateur') }}</button>
                    <a href="{{ path('admin_index') }}" id="form-cancel">Annuler</a>
                </div>
            {{ form_end(form) }}
        </div>

        <!-- Div qui donne style à la partie inférieur du site, avec separateur -->
        <div class="separator-bottom"></div>
    </main>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" charset="utf8" src="{{ asset('javascript/jquery-3.4.1.min.js') }}"></script>
    <script type="text/javascript" charset="utf8" src="{{ asset('javascript/selects.js') }}"></script>
    <script type="text/javascript" charset="utf8" src="{{ asset('select/js/select2.js') }}"></script>
    <script type="text/javascript" charset="utf8" src="{{ asset('select/js/fr.js') }}"></script>
{% endblock %}
