{% block stylesheets %}<link rel="stylesheet" href="/css/login.css">{% endblock %}
{% block title %}<title>DOMMA - Traitement de données de masse</title>{% endblock %}

{% block body %}

    {% if error %}
        <div class="login-error">
            <img src="{{ asset('img/alert-icon.png') }}" alt="Alert" id="alert-icon" />
            <p>{{ error.messageKey|trans(error.messageData, 'security') }}</div></p>
    {% endif %}

    {% if app.user %}
        <img src="{{ asset('/img/logo.png') }}" alt="Logo">
        <h1>Traitement de données de masse</h1>

        <form method="post">
            <div class="form-fields-with-user">
                <div class="alert-container">
                    <div class="login-notice">
                        <p>Vous êtes déjà connecté en tant que <p id="login-username">{{ app.user.username }}</p></p>
                        <a href="{{ path('app_logout') }}">Déconnexion</a>
                    </div>
                </div>
            </div>
        </form>
    {% else %}

    <img src="{{ asset('/img/logo.png') }}" alt="Logo">
    <h1>Traitement de données de masse</h1>

    <form method="post">
        <div class="form-fields">
            <div class="field">
                <label class="label-form" for="inputUsername">Identifiant</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
            </div>
            <div class="field">
                <label class="label-form" for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">

            <input type="submit" class="login-button" value="Se connecter">
        </div>
    </form>
    {% endif %}
{% endblock %}
