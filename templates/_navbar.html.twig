{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
{% endblock %}

{% block body %}
    <nav>
        <ul>
        {% if is_granted('ROLE_USER') %}
            <li>
                <a href="{{ path('context_index') }}"><img src="{{ asset('img/logo.png') }}" alt="logo" id="nav-logo" /></a>
            </li>
            <div class="dropdown">
                <button class="dropbtn">{{ app.user.firstName }}
                    <i class="fa fa-angle-down icon-angle-nav"></i>
                </button>
                <div class="dropdown-content">
                    <a href="{{ path('context_index') }}">Mes contextes</a>
                    <a href="{{ path('macro_index') }}">Mes macros</a>
                    <a href="{{ path('users_edit', {'id': app.user.id}) }}">Gestion de compte</a>
                    <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            </div>
            <li>
                <a href="{{ path('users_edit', {'id': app.user.id }) }}"><img src="{{ avatar }}" alt="avatar" id="nav-avatar" /></a>
            </li>
        {% else %}
            <li>
                <a href="{{ path('admin_index') }}"><img src="{{ asset('img/logo.png') }}" alt="logo" id="nav-logo" /></a>
            </li>
            <div class="dropdown">
                <button class="dropbtn">{{ app.user.firstName }}
                    <i class="fa fa-angle-down icon-angle-nav"></i>
                </button>
                <div class="dropdown-content">
                    <a href="{{ path('admin_index') }}">Administration</a>
                    <a href="{{ path('admin_new') }}">Créer utilisateur</a>
                    <a href="{{ path('admin_edit', {'id': app.user.id}) }}">Gérer mon compte</a>
                    <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            </div>
            <li>
                <a href="{{ path('admin_index') }}"><img src="{{ avatar }}" alt="avatar" id="nav-avatar" />
                </a></li>
        {% endif %}
        </ul>
    </nav>
{% endblock %}
