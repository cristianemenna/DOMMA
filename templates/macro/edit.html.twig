{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/macro/new.css') }}">
    <link rel="stylesheet" href="{{ asset('css/context/edit.css') }}">
    <link rel="stylesheet" href="{{ asset('select/css/select2.css') }}">
{% endblock %}

{% block title %}DOMMA - Edition de macro{% endblock %}

{% block body %}
    <main>
        <div class="separator">
            <h1>Edition de {{ macro.title }}</h1>
            {{ include('macro/_delete_form.html.twig') }}
        </div>

        <div class="edit-container">
            {{ form_start(form) }}
                {{ form_widget(form.title,  {'attr': {'class': 'form-input', 'placeholder': 'Titre'}} ) }}
                {{ form_widget(form.description,  {'attr': {'class': 'form-input', 'placeholder': 'Description'}} ) }}
                {{ form_widget(form.code,  {'attr': {'class': 'form-input', id: 'form-code', 'placeholder': 'Code'}} ) }}
                <div class="select-style">
                    {{ form_widget(form.type) }}
                </div>
            <div class="form-buttons-macro">
                <button id="btn-edit-macro">{{ button_label|default('Mettre Ã  jour') }}</button>
                <a href="{{ app.request.headers.get('referer') }}" class="form-cancel">Annuler</a>
            </div>
            {{ form_end(form) }}
        </div>
        <div class="separator-bottom"></div>
    </main>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('javascript/jquery-3.4.1.min.js') }}"></script>
    <script src="{{ asset('javascript/select_apply.js') }}"></script>
    <script src="{{ asset('select/js/select2.js') }}"></script>
    <script src="{{ asset('select/js/fr.js') }}"></script>
{% endblock %}

